{
  "name": "minimal",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prettier": "prettier --write '**/*.{ts,tsx,css,json,md}'",
    "prettier:check": "prettier --check '**/*.{ts,tsx,css,json,md}'",
    "validate-data": "node tools/scripts/validate-data.js",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run type-check && npm run lint && npm run prettier:check && npm run validate-data",
    "clean": "rm -rf .next"
  },
  "dependencies": {
    "next": "14.0.2",
    "next-themes": "^0.2.1",
    "prettier": "^3.3.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.2",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
